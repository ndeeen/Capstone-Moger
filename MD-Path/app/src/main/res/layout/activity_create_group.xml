<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/discord_darkgrey"
    tools:context=".screen.creategroup.CreateGroupActivity">

    <EditText
        android:id="@+id/et_groupname"
        android:layout_width="250dp"
        android:layout_height="30dp"

        android:layout_marginTop="300dp"
        android:background="@drawable/search_bg"
        android:ems="10"
        android:hint="@string/groupname"
        android:inputType="text"

        android:paddingHorizontal="15dp"
        android:paddingLeft="8dp"

        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_addGroup"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/discord_blue"
        android:text="@string/creategroup"
        android:textSize="10sp"
        android:layout_marginTop="20dp"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_groupname" />

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_addGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>